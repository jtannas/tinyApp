<h1>TinyApp</h1>
<% if (username) {%>
  <form method="POST" action="/logout">
    <label><%= username %></label>
    <input type="Submit" value="logout">
  </form>
<% } else {%>
  <form method="POST" action="/login">
    <label for="username"></label>
    <input type="text" name="username">
    <input type="Submit" value="login">
  </form>
<% } %>
