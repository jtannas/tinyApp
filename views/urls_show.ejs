<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>TinyApp</title>
  <link rel="stylesheet" href="/bootstrap.min.css">
</head>

<body>

  <header>
    <%- include ./partials/_header %>
  </header>

  <% for (key in urls) {%>
    <form>
        <h2>
          Shortcut <a href="<%= (urls[key].longUrl.startsWith('http') ? '' : '//' ) + urls[key].longUrl %>">tinyApp.ca/u/<%= key %></a>
        </h2>
        <div class="form-group">
          <label for="longUrl">
            Full URL
          </label>
          <input type="text" name="longUrl" value="<%= urls[key].longUrl %>" class="form-control" size="40">
          <button class="btn btn-info" type="submit" formmethod="POST" formaction="/urls/<%= key %>">
            Update
          </button>
        </div>
    </form>

    <form action="/urls/<%= key %>/delete" method="POST">
      <div class="form-group">
        <button class="btn btn-danger" type="submit">
          Delete
        </button>
      </div>
    </form>

    <hr>
  <%}%>

</body>
</html>
